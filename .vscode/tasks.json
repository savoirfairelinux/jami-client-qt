{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "cmake-tests",
            "type": "shell",
            "command": "ctest",
            "args": [
                "-V",
                "-R"
            ],
            "group": {
                "kind": "test",
                "isDefault": true
            },
            "problemMatcher": [],
            "detail": "Run the tests using CTest."
        },
        {
            "label": "cmake-configure",
            "type": "shell",
            "command": "cmake",
            "args": [
                "-S", ".",
                "-B", "build",
                "-DCMAKE_BUILD_TYPE=Debug",
                "-DBUILD_TESTING=True"
            ],
            "group": "build",
            "problemMatcher": [],
            "detail": "Generate the build system files with CMake."
        },
        {
            "label": "cmake-build",
            "type": "shell",
            "command": "cmake",
            "args": [
                "--build", "build"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": [
                "$gcc"
            ],
            "detail": "Compile the project using the generated build system.",
            "dependsOn": [
                "cmake-configure"
            ]
        }
    ]
}