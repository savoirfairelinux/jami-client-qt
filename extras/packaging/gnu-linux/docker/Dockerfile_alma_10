        gstreamer1 gstreamer1-devel \
        gstreamer1-plugins-bad-free-devel \
        gstreamer1-plugins-base-devel \
        gstreamer1-plugins-good \
        jsoncpp-devel \
        libX11-devel \
        libXext-devel \
        libXfixes-devel \
        libXrender-devel \
        libappindicator-gtk3-devel \
        libargon2-devel \
        libcanberra-devel \
        libcurl-devel \
        libdrm \
        libnatpmp-devel \
        libnotify \
